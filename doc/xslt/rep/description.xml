<formats xmlns="http://www.masobit.net/ns/repository/1.0">
  <checksum>
    <type label="md5" format="text">
      <name>MD5</name>
      <description>
      MD5 Hash of the file
      </description>
    </type>

    <type label="pgp" format="link">
      <name>PGP (GPG) Signature</name>
      <description>
      PGP Signature
      </description>
    </type>
  </checksum>

  <download>
    <type label="tar.gz">
      <extension>.tar.gz</extension>
      <name>Source Tarball</name>
      <arch>any</arch>
      <description>
      Source tarball (documentation included)
      </description>
    </type>

    <type label="online">
      <extension>.none</extension>
      <name>Browse sources online</name>
      <arch>any</arch>
      <description>
      Browse Sources on-line 
      </description>
    </type>
   
    <type label="rpm">
      <extension>.rpm</extension>
      <name>Red Hat Package</name>
      <arch>i386</arch>
      <description>
      Binary Red Hat Package
      </description>
    </type>

    <type label="deb">
      <extension>.deb</extension>
      <name>Debian Package</name>
      <arch>i386</arch>
      <description>
      Binary Debian Package
      </description>
    </type>
  </download>
</formats>
