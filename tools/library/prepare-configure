test -f ./tools/include/config || {
  echo "must be run from mod-xslt top level directory" 1>&2 
  exit 1
}

rm ./.in &>/dev/null && \
  echo "- .in (yes, it sucks)" 
rm ./debug.out &>/dev/null && \
  echo "- debug.out"
rm ./configure &>/dev/null && \
  echo "- configure"
rm ./aclocal.m4 &>/dev/null && \
  echo "- aclocal.m4"

set -e 
echo "+ autoheader..."
autoheader &&  \
  echo "           done."

echo "+ aclocal..."
aclocal && \
  echo "        done."

echo "+ autoconf..."
autoconf $@ && \
  echo "         done."

set +e 
rm -r config.log &>/dev/null && \
  echo "- config.log"
  
rm -r autom4te.cache &>/dev/null && \
  echo "- autom4te.cache"

rm ./.in &>/dev/null && \
  echo "- .in (yes, it sucks)" 
